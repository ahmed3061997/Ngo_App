<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/home_tabs"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/home_tabs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/main_app_bar"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:elevation="0.5dp"
        android:overScrollMode="always"
        app:tabIndicatorColor="@color/colorWhiteText"
        app:tabIndicatorHeight="8dp"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabSelectedTextColor="@color/colorWhiteText"
        app:tabTextColor="@color/colorWhiteText" />
</RelativeLayout>